{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "declaration": true,        // So we emit .d.ts for type definitions
      "outDir": "dist",
      "jsx": "react-jsx",         // or "react" if older React
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
  }
  